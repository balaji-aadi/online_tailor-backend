# Server Port
PORT=5000

# MongoDB Connection URI
MONGODB_URI=mongodb+srv://your_user:your_password@cluster0.mongodb.net/your_db?retryWrites=true&w=majority

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key

# Key for encrypting sensitive measurements data (32 characters)
MEASUREMENT_ENCRYPT_KEY=your_32_characters_key_here

# Email Service (SMTP) Configuration
EMAIL_HOST=smtp.your-email.com
EMAIL_PORT=587
EMAIL_USER=your_email_username
EMAIL_PASS=your_email_password
EMAIL_FROM=your_email_address@example.com

# Twilio SMS Gateway Credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Firebase Service Account JSON stringified
FIREBASE_SERVICE_ACCOUNT="{\"type\":\"service_account\",\"project_id\":\"your_project_id\", ... }"

# Other API keys and secrets as necessary

# Node Environment
NODE_ENV=development
